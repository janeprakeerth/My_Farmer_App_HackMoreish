<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B9DCBB"
    tools:context=".activity_register_scientist">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:layout_marginStart="10dp"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    >
                    <ImageView
                        android:id="@+id/iv_image_scientist"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="100dp"
                        android:background="@drawable/ic_baseline_person_24"
                        />
                </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:hintTextColor="#008000"
                app:endIconTint="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusBottomEnd="50dp"
                android:layout_marginEnd="15dp"
                android:hint="  Email - id"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#008000"
                >
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/email_id_scientist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:hintTextColor="#008000"
                app:endIconTint="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusBottomEnd="50dp"
                app:endIconMode="password_toggle"
                android:layout_marginEnd="15dp"
                android:hint="  Password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#008000"
                >
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/password_scientist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:hintTextColor="#008000"
                app:endIconTint="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusBottomEnd="50dp"
                android:hint="  Name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#008000"
                >
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/name_scientist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:hintTextColor="#008000"
                app:endIconTint="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusBottomEnd="50dp"
                android:layout_marginEnd="15dp"
                android:hint="  Mobile Number"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#008000"
                >
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/mobile_number_scientist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:inputType="number"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFE5"
                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    >
                    <ImageView
                        android:id="@+id/iv_certificate_scientist"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_baseline_add_photo_alternate_24"
                        />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/add_certificate_scientist"
                        android:text="Add Certificate"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/register"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:backgroundTint="#008000"
                android:text="Register"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>