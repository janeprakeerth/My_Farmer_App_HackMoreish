<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:backgroundTint="#A6D6A8"
    android:layout_height="match_parent"
    tools:context=".answeractivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_question_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Farmer Question :"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/tv_answeractivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="Hello"
        android:background="@color/white"
        android:textSize="20sp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_name"
        />
    <EditText
        android:layout_margin="20dp"
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:textStyle="italic"
        android:id="@+id/et_answeractivity"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="Enter the solution for the problem"
        android:textColorHint="@color/black"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_answeractivity"
        />

    <ImageView
        android:id="@+id/iv_farmer_question_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_answeractivity" />

    <Button
        android:id="@+id/btn_answeractivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:backgroundTint="#5cdb5c"
        android:text="Answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_farmer_question_image" />
</androidx.constraintlayout.widget.ConstraintLayout>